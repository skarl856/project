@charset "UTF-8";

/* nanum-gothic-regular - latin */
@font-face {
  font-family: 'Nanum Gothic';
  font-style: normal;
  font-weight: 400;
  src: url('../fonts/nanum-gothic-v17-latin-regular.eot'); /* IE9 Compat Modes */
  src: local('NanumGothic'),
       url('/fonts/nanum-gothic-v17-latin-regular.eot') format('embedded-opentype'), /* IE6-IE8 */
       url('/fonts/nanum-gothic-v17-latin-regular.woff2') /* Super Modern Browsers */
       url('/fonts/nanum-gothic-v17-latin-regular.woff') format('woff'), /* Modern Browsers */
       url('/fonts/nanum-gothic-v17-latin-regular.ttf') format('truetype'), /* Safari, Android, iOS */
       url('/fonts/nanum-gothic-v17-latin-regular.svg#NanumGothic') format('svg'); /* Legacy iOS */
}

/* 구글 머티리얼 아이콘 : 오프라인 */
@font-face {
   font-family: 'Material Icons';
   font-style: normal;
   font-weight: 400;
   src: url(../../css/google/iconfont/MaterialIcons-Regular.eot); /* For IE6-8 */
   src: local('Material Icons'),
        local('MaterialIcons-Regular'),
        url(../../css/google/iconfont/MaterialIcons-Regular.woff2) format('woff2'),
        url(../../css/google/iconfont/MaterialIcons-Regular.woff) format('woff'),
        url(../../css/google/iconfont/MaterialIcons-Regular.ttf) format('truetype');
}
 
.material-icons {
  font-family: 'Material Icons';
  font-weight: normal;
  font-style: normal;
  font-size: 24px;  /* Preferred icon size */
  display: inline-block;
  line-height: 1;
  text-transform: none;
  letter-spacing: normal;
  word-wrap: normal;
  white-space: nowrap;
  direction: ltr;
 
  /* Support for all WebKit browsers. */
  -webkit-font-smoothing: antialiased;
  /* Support for Safari and Chrome. */
  text-rendering: optimizeLegibility;
 
  /* Support for Firefox. */
  -moz-osx-font-smoothing: grayscale;
 
  /* Support for IE. */
  font-feature-settings: 'liga';
}

#wrap {
	display: flex;
	z-index: 1;
	width: 1330px;
	margin: 20px auto 0 auto;
    font-family: Nanum Gothic;
}

/* a 태그 데코레이션 제거 */
a, a:hover {
    color: black;
    text-decoration: none;
}

/* 좌측메뉴 */
#left {
    float: left;
    width: 190px;
    height: 750px;
    margin: 10px 30px 10px 0;
    padding: 20px;
    border: 1px solid rgb(141,141,141);
    border-radius: 20px;
}

/* 죄측메뉴 서브 */
#sub_menu {
    font-size: 10pt;
}

/* 우측 본문 */
#container {
    float: left;
    width: 1120px;
    padding: 20px 0;
}

/* 현재창 title */
header {
    margin: 10px 0;
}

/* 분리선 */
#sepa {
	width: 100%;
    margin-top: 20px;
	border: .5px solid rgb(141,141,141);
}

/* 관리자 선택 테이블 */
#admin_choi_tbl {
    width: 100%;
    margin: 20px 0 40px 0;
    border-top: 1px solid rgb(141,141,141);
    font-size: 10pt;
    text-align: center;
}

/* 관리자 선택 테이블 첫줄 */
.list1 {
    height: 50px;
    padding: 10px;
    border-bottom: 1px solid rgb(141,141,141);
    background-color: rgb(203,203,203);
}

/* 관리자 선택 테이블 라인 */
.list2 {
    height: 55px;
    padding: 10px;
    border-bottom: 1px solid rgb(141,141,141);
}

/* 하단부 버튼들 */
.bottom_btn1 {
    float: left;
    width: 100px;
}
.bottom_btn2 {
    float: right;
    width: 100px;
}

/* 팝업창 주변 어둡게*/
#modal {
	display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .5);
    text-align: center;
}

/* 상품 등록 : 팝업 */
#modal_ {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 700px;
    height: 550px;
    padding: 1rem 1.5rem;
    border-radius: 0.5rem;
    background-color: white;
}

/* 팝업창 : 제목 */
#modal_header {
    float: left;
    width: 100%;
    margin-bottom: 20px;
    padding: 10px 5px 15px;
    border-bottom: 1px solid rgb(141,141,141);
    text-align: left;
}

/* 팝업창 : 메인 화면 상품 등록 박스 */
#modal_tbl {
    width: 100%;
    height: 250px;
    margin: 20px 0;
}

/* 팝업창 : 테이블 */
#modal_tbl_header, #modal_tbl_body {
    width: 100%;
    font-size: 10pt;
    text-align: center;
}

/* 팝업창 : 테이블안 선 처리 */
#modal_tbl_header td {
    height: 40px;
    border-top: 1px solid rgb(141,141,141);
    border-bottom: 1px solid rgb(141,141,141);
    background-color: rgb(203,203,203);
}
#modal_tbl_body td {
    height: 40px;
    border-bottom: 1px solid rgb(141,141,141);
}

/* 페이지 네비게이션 */
#pagination {
    position: relative;
    left: 50%;
    transform: translate(-50%, 0);
	width: 360px;
	margin: 30px 0;
    font-size: 10pt;
}

/* 검색 결과가 없습니다. */
#search_zero {
    display: none;
    margin-top: 70px;
    text-align: center;
}
