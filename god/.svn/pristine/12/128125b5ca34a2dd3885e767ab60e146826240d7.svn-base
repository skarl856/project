@charset "UTF-8";

/* nanum-gothic-regular - latin */
@font-face {
  font-family: 'Nanum Gothic';
  font-style: normal;
  font-weight: 400;
  src: url('../fonts/nanum-gothic-v17-latin-regular.eot'); /* IE9 Compat Modes */
  src: local('NanumGothic'),
       url('/fonts/nanum-gothic-v17-latin-regular.eot') format('embedded-opentype'), /* IE6-IE8 */
       url('/fonts/nanum-gothic-v17-latin-regular.woff2') /* Super Modern Browsers */
       url('/fonts/nanum-gothic-v17-latin-regular.woff') format('woff'), /* Modern Browsers */
       url('/fonts/nanum-gothic-v17-latin-regular.ttf') format('truetype'), /* Safari, Android, iOS */
       url('/fonts/nanum-gothic-v17-latin-regular.svg#NanumGothic') format('svg'); /* Legacy iOS */
}

/* 구글 머티리얼 아이콘 : 오프라인 */
@font-face {
   font-family: 'Material Icons';
   font-style: normal;
   font-weight: 400;
   src: url(../../css/google/iconfont/MaterialIcons-Regular.eot); /* For IE6-8 */
   src: local('Material Icons'),
        local('MaterialIcons-Regular'),
        url(../../css/google/iconfont/MaterialIcons-Regular.woff2) format('woff2'),
        url(../../css/google/iconfont/MaterialIcons-Regular.woff) format('woff'),
        url(../../css/google/iconfont/MaterialIcons-Regular.ttf) format('truetype');
}
 
.material-icons {
  font-family: 'Material Icons';
  font-weight: normal;
  font-style: normal;
  font-size: 24px;  /* Preferred icon size */
  display: inline-block;
  line-height: 1;
  text-transform: none;
  letter-spacing: normal;
  word-wrap: normal;
  white-space: nowrap;
  direction: ltr;
  margin: -2px 0 0 0;
  vertical-align: middle;
 
  /* Support for all WebKit browsers. */
  -webkit-font-smoothing: antialiased;
  /* Support for Safari and Chrome. */
  text-rendering: optimizeLegibility;
 
  /* Support for Firefox. */
  -moz-osx-font-smoothing: grayscale;
 
  /* Support for IE. */
  font-feature-settings: 'liga';
}

#wrap {
	display: flex;
	z-index: 1;
	width: 1330px;
	margin: 20px auto 0 auto;
    font-family: Nanum Gothic;
}

/* a 태그 데코레이션 제거 */
a, a:hover {
    color: black;
    text-decoration: none;
}

/* 좌측메뉴 */
#left {
    float: left;
    width: 190px;
    height: 750px;
    margin: 10px 30px 10px 0;
    padding: 20px;
    border: 1px solid rgb(141,141,141);
    border-radius: 20px;
}

/* 죄측메뉴 서브 */
#sub_menu {
    font-size: 10pt;
}

/* 우측 본문 */
#container {
    float: left;
    width: 1120px;
    padding: 20px 0;
}

/* 현재창 title */
header {
    margin: 10px 0;
}

/* 검색 전체 : 상세검색 버튼까지 포함 */
#search_area {
    margin-bottom: 10px;
    border: 1px solid rgb(141,141,141);
}

/* 검색 폼 */
#search_form {
    padding-top: 30px;
    text-align: center;
}

/* 이름/아이디 셀렉트 박스 */
#select_box {
    width: 80px;
    height: 30px;
    font-size: 10pt;
}

/* 상세검색열기 버튼 */
#search_detail_btn {
    float: right;
    margin-right: 10px;
    font-size: 10pt;
}

/* 상세검색 */
#search_detail {
    margin-bottom: 30px;
}

/* 분리선 */
#sepa {
    position: relative;
    left: 50%;
    transform: translate(-50%, 0);
	width: 98%;
	border: .5px solid rgb(141,141,141);
}

/* 상세검색 옵션 */
#search_detail_op {
    position: relative;
    left: 50%;
    transform: translate(-50%, 0);
    font-size: 10pt;
}

/* 상세검색 옵션 행 간격 */
.detail_tr {
    height: 40px;
}

/* 가입일 박스 */
#sdate, #edate {
    width: 90px;
    border: 1px solid rgb(141,141,141);
    text-align: center;
}

/* 검색창 텍스트 입력 박스 */
.text_box {
    width: 120px;
    border: 1px solid rgb(141,141,141);
}

/* 메일수신 라디오 버튼 */
.radio {
    margin: -2px 0 0 0;
    vertical-align: middle;
}

/* 회원등급 정보 */
#class_info {
    font-size: 10pt;
}

/* 검색 결과 수 */
#result_count {
    float: right;
    margin-bottom: 5px;
    font-size: 10pt;
}

/* 회원리스트 표 */
#member_list {
    width: 100%;
    margin: 5px 0 20px 0;
    border-top: 1px solid rgb(141,141,141);
    font-size: 10pt;
    text-align: center;
}

/* 회원리스트 첫줄 */
.list1 {
    height: 30px;
    padding: 10px;
    border-bottom: 1px solid rgb(141,141,141);
    background-color: rgb(203,203,203);
}

/* 회원리스트 라인 */
.list2 {
    height: 50px;
    padding: 10px;
    border-bottom: 1px solid rgb(141,141,141);
}

/* 페이지 네비게이션 */
#pagination {
    position: relative;
    left: 50%;
    transform: translate(-50%, 0);
	width: 360px;
	margin: 30px 0;
    font-size: 10pt;
}

/* 적립금 팝업창 주변 어둡게*/
#modal {
	display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .5);
    text-align: center;
}

/* 적립금 팝업창 : 팝업 */
#modal_ {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 700px;
    height: 480px;
    padding: 1rem 1.5rem;
    border-radius: 0.5rem;
    background-color: white;
}

/* 적립금 팝업창 : 제목 */
#modal_header {
    float: left;
    width: 100%;
    padding: 10px 5px 15px;
    border-bottom: 1px solid rgb(141,141,141);
    text-align: left;
}

/* 적립금 팝업창 : 내용 */
#modal_content {
    overflow: hidden;
    height: 330px;
    margin-top: 70px;
    padding: 10px;
    border-radius: 0px;
    text-align: left;
}

/* 적립금 팝업창 : 선택된 아이디 */
#modal_content_id {
    overflow: scroll;
    width: 100%;
    height: 150px;
    margin: 10px 5px 50px;
    padding: 5px;
    border: 1px solid rgb(141,141,141);
}
