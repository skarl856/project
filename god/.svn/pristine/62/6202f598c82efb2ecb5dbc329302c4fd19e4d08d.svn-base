@charset "UTF-8";

/* nanum-gothic-regular - latin */
@font-face {
	font-family: 'Nanum Gothic';
	font-style: normal;
	font-weight: 400;
	src: url('../fonts/nanum-gothic-v17-latin-regular.eot'); /* IE9 Compat Modes */
	src: local('NanumGothic'),
	     url('/fonts/nanum-gothic-v17-latin-regular.eot') format('embedded-opentype'), /* IE6-IE8 */
	     url('/fonts/nanum-gothic-v17-latin-regular.woff2') /* Super Modern Browsers */
	     url('/fonts/nanum-gothic-v17-latin-regular.woff') format('woff'), /* Modern Browsers */
	     url('/fonts/nanum-gothic-v17-latin-regular.ttf') format('truetype'), /* Safari, Android, iOS */
	     url('/fonts/nanum-gothic-v17-latin-regular.svg#NanumGothic') format('svg'); /* Legacy iOS */
}

/* 구글 머티리얼 아이콘 : 오프라인 */
@font-face {
	font-family: 'Material Icons';
	font-style: normal;
	font-weight: 400;
	src: url(../../css/google/iconfont/MaterialIcons-Regular.eot); /* For IE6-8 */
	src: local('Material Icons'),
	     local('MaterialIcons-Regular'),
	     url(../../css/google/iconfont/MaterialIcons-Regular.woff2) format('woff2'),
	     url(../../css/google/iconfont/MaterialIcons-Regular.woff) format('woff'),
	     url(../../css/google/iconfont/MaterialIcons-Regular.ttf) format('truetype');
}
 
.material-icons {
	font-family: 'Material Icons';
	font-weight: normal;
	font-style: normal;
	font-size: 24px;  /* Preferred icon size */
	display: inline-block;
	line-height: 1;
	text-transform: none;
	letter-spacing: normal;
	word-wrap: normal;
	white-space: nowrap;
	direction: ltr;
	
	/* Support for all WebKit browsers. */
	-webkit-font-smoothing: antialiased;
	/* Support for Safari and Chrome. */
	text-rendering: optimizeLegibility;
	
	/* Support for Firefox. */
	-moz-osx-font-smoothing: grayscale;
	
	/* Support for IE. */
	font-feature-settings: 'liga';
}

/* 전체 레이아웃 */
div#wrap {
	width: 100vw;
	/* 템플릿 적용시 전체 레이아웃 높이 조정 : 본문 가용화면 확보 :
		가용화면(viewport) - 상단메뉴 높이 - 하단 section 높이 - padding(높이)  */
	min-height: calc(100vh - 30px - 50px - 40px);
/* 	background: pink; */
	display: flex;
	align-items: center;
	justify-content: center;
	font-family: Nanum Gothic;
}

/* 로그인 전체 wrap */
div#login_wrap {
	width: 500px;
/* 	background: cyan; */
}

/* 로그인 상단 section1(로그인 아이디, 비밀번호 필드 및 보안 로그인 버튼) */
div#login_section1 {
	width: 500px;
	height: 220px;
	padding-left: 50px;
	margin-bottom: 30px;
/* 	background: yellow; */
}

/* 로그인 좌측(로그인 아이콘, 입력필드) */
#login_left {
	float: left;
	width: 60%;
	height: 180px;
/* 	background: cyan; */
	display: flex;
	align-items: center;
	justify-content: center;
	padding-left:5px;
}

/* 로그인 박스 테이블 */
/* 아이콘 설정 */
.material-icons.mt-1 {
	font-size: 45px;
	font-weight: bold;
/* 	display: flex; */
	align-items: center;
	justify-content: center;
}
/* 입력필드 설정 */
.inputfld {
	width: 100%;
	height: 100%;
}

/* 로그인 아이디 아이콘 */
#login_left_icon1 {
	width: 50px;
	height: 50px;
 	margin: 5px 0;
	padding: 0px;
	border: 2px solid;
	border-right:none;
/* 	background: green; */
	display: flex;
	align-items: center;
	justify-content: center;
}
/* 로그인 아이디 입력 필드 */
#login_left_fld1 {
	width: 65%;
	height: 50px;
	margin-right: 10%;
	border: 2px solid;
/* 	background: pink; */
}

/* 로그인 비밀번호 아이콘 */
#login_left_icon2 {
	width: 50px;
	height: 50px;
	margin: 5px 0;
	padding: 20px;
	border: 2px solid;
	border-right: none;
/* 	background: #8389E0; */
	display: flex;
	align-items: center;
	justify-content: center;
}

/* 로그인 비밀번호 입력 필드 */
#login_left_fld2 {
	width: 65%;
	height: 50px;
	border: 2px solid;
 	background: pink;
}

/* 로그인 우측(로그인 버튼) */
#login_right {
	width: 35%;
	height: 180px;
/* 	background: orange; */
	display: flex;
	align-items: center;
	justify-content: center;
}
/* 로그인 버튼 설정 */
.login_btn {
	width: 110px; 
	height: 110px; 
	border: 2px solid;
}

/* 로그인 하단 section2(설명부분) */
div#login_section2 {
	width: 500px;
	height: 220px;
	margin-top: 30px;
/* 	background: #98E0AD; */
}

/* section2 title */
#section2_title {
	width: auto;
	height: 50px;
	border: 2px solid;
 	background: #A6A6A6;
	font-size: 20px;
	display: flex;
	align-items: center;
	justify-content: center;
}

/* section2 content */
#section2_content {
	width: auto;
	height: auto;
	padding-left: 10px;
	border: 2px solid;
	border-top: none;
	font-size: 15px;
}

/* 에러 메세지 */
.msg {
	color:red;
}