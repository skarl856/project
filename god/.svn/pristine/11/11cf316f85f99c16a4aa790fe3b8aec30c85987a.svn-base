}

#all_mileage_price td {
    border-bottom: 1px solid #e7e7e7;
    padding-left: 10px;
}
/* ////////////////////////////////// 예정적립금 끝//////////////////// */

/* ///////////////////////////////////////배송지 정보 시작/////////////////// */
