}

#delivery_address_info th {
    border: solid #e7e7e7;
    border-width: 0 1px 1px 0;
    padding: 10px;
    text-align: left;
}

#delivery_address_info td {
    border-bottom: 1px solid #e7e7e7;
    padding-left: 10px;
}
/* /////////////////////////////////////배송지 정보 끝 ////////////////////// */
#btns {
    margin: 20px 0;
}

#btns a {
