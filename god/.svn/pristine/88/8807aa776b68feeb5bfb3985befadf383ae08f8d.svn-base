/* 적립금 팝업창 주변 어둡게*/
#modal {
	display: none;
	display: none;
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .5);
    text-align:center;
}

/* 적립금 팝업창 : 팝업 */
#modal_ {
	position: absolute;
	top: 50%;
	left: 50%;
	width: 400px;
	height: 240px;
	padding: 1rem 1.5rem;
	border-radius: 0.5rem;
	transform: translate(-50%, -50%);
	background-color: white;
}

/* 적립금 팝업창 : 제목 */
#modal_header {
	float: left;
	width: 100%;
	padding: 5px;
	border-bottom: 1px solid rgb(141,141,141);
	text-align: left;
/* 	background:pink; */
}

/* 적립금 팝업창 : 내용 */
#modal_content {
	float:left;
	width:100%;
	height:120px;
	padding: 20px 0; 
	border-radius:0px;
	overflow: hidden;
	text-align: left;
/* 	background:yellow; */
}

#modal_footer {
	width:100%;
	padding-top:20px;
}