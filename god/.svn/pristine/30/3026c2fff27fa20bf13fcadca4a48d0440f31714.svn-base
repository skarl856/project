@charset "UTF-8";

/* nanum-gothic-regular - latin */
@font-face {
  font-family: 'Nanum Gothic';
  font-style: normal;
  font-weight: 400;
  src: url('../fonts/nanum-gothic-v17-latin-regular.eot'); /* IE9 Compat Modes */
  src: local('NanumGothic'),
       url('/fonts/nanum-gothic-v17-latin-regular.eot') format('embedded-opentype'), /* IE6-IE8 */
       url('/fonts/nanum-gothic-v17-latin-regular.woff2') /* Super Modern Browsers */
       url('/fonts/nanum-gothic-v17-latin-regular.woff') format('woff'), /* Modern Browsers */
       url('/fonts/nanum-gothic-v17-latin-regular.ttf') format('truetype'), /* Safari, Android, iOS */
       url('/fonts/nanum-gothic-v17-latin-regular.svg#NanumGothic') format('svg'); /* Legacy iOS */
}

/* 구글 머티리얼 아이콘 : 오프라인 */
@font-face {
   font-family: 'Material Icons';
   font-style: normal;
   font-weight: 400;
   src: url(../../css/google/iconfont/MaterialIcons-Regular.eot); /* For IE6-8 */
   src: local('Material Icons'),
        local('MaterialIcons-Regular'),
        url(../../css/google/iconfont/MaterialIcons-Regular.woff2) format('woff2'),
        url(../../css/google/iconfont/MaterialIcons-Regular.woff) format('woff'),
        url(../../css/google/iconfont/MaterialIcons-Regular.ttf) format('truetype');
}

.material-icons {
  font-family: 'Material Icons';
  font-weight: normal;
  font-style: normal;
  font-size: 18px;  /* Preferred icon size */
  display: inline-block;
  line-height: 1;
  text-transform: none;
  letter-spacing: normal;
  word-wrap: normal;
  white-space: nowrap;
  direction: ltr;
  margin: -2px 0 0 0;
  vertical-align: middle;

  /* Support for all WebKit browsers. */
  -webkit-font-smoothing: antialiased;
  /* Support for Safari and Chrome. */
  text-rendering: optimizeLegibility;

  /* Support for Firefox. */
  -moz-osx-font-smoothing: grayscale;

  /* Support for IE. */
  font-feature-settings: 'liga';
}

#wrap {
	display: flex;
	z-index: 1;
	width: 1330px;
	margin: 20px auto 0 auto;
    font-family: Nanum Gothic;
}

/* a 태그 데코레이션 제거 */
a, a:hover {
    color: black;
    text-decoration: none;
}

/* 좌측메뉴 */
#left {
    float: left;
    width: 190px;
    height: 750px;
    margin: 10px 30px 10px 0;
    padding: 20px;
    border: 1px solid rgb(141,141,141);
    border-radius: 20px;
}

/* 죄측메뉴 서브 */
#sub_menu {
    font-size: 10pt;
}

/* 우측 본문 */
#container {
    float: left;
    width: 1120px;
    padding: 20px 0;
}

/* 현재창 title */
header {
    margin: 10px 0;
}

/* 컨텐츠 title */
.sub_title {
    margin: 10px 0;
    font-size: 11pt;
}

/* 카테고리 부분영역 */
#menu_wrap{
    width: 100%;
    height: 400px;
    margin: 0 auto;
}

/* 메인 카테고리 메뉴바 영역 */
#menu_ {
    display: flex;
	list-style: none;
	padding-inline-start: 0;
}

/* 각 메인 카테고리 메뉴 영역 */
li[id$=__btn] {
	display: inline-block;
	height: 50px;
}

/* 카테고리 메뉴바 */
li[id$=__btn] > a{
	display: block;
    width: 111px;
	height: 55px;
    margin: 0 25px;
	line-height: 50px;
	color: gray;
	font-size: 9pt;
	text-decoration: none;
	text-align: center;
}

/* 서브 드롭메뉴바 */
.ui-state-default {
    display: block;
    margin: 0 10px;
	padding: 5px 0;
    font-size: 8pt;
}
.sortable {
    list-style-type: none;
    margin: 0;
    padding: 0;
}

/* 셀렉트 박스 */
#select_box {
    height: 30px;
    margin-right: 20px;
    padding: 0 5px;
    font-size: 10pt;
}

/* 하단 등록 폼 */
#ctgr_regi {
	text-align: center;
}
