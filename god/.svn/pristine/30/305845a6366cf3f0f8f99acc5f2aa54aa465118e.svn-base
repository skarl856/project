  /* Support for IE. */
  font-feature-settings: 'liga';
}

#wrap {
	display: flex;
	z-index: 1;
	width: 90%;
	min-width: 1100px;
	margin: 20px auto 150px auto;
    font-family: Nanum Gothic;
}

/* a 태그 데코레이션 제거 */
a, a:hover {
	color: black;
	text-decoration: none;
}

/* 우측 본문 */
#container {
	width: 100%;
}

/* 제목 */
#title {
	padding: 40px 0;
	/*background-color: red;*/
	font-size: 22pt;
	text-align: center;
}

/* Cart 테이블 */
table {
	width: 100%;
	border-top: 2px solid black;
	text-align: center;
}
table td {
	padding: 15px 10px;
	border-bottom: 1px solid #eeeeee;
}
table thead td {
	font-size: 11pt;
}

/* 카트 없음 */
#not_cart {
	width: 100%;
	margin: 200px 0 100px 0;
	text-align: center;
	font-size: 13pt;
}
