@charset "UTF-8";

/* nanum-gothic-regular - latin */
@font-face {
	font-family: 'Nanum Gothic';
	font-style: normal;
	font-weight: 400;
	src: url('../fonts/nanum-gothic-v17-latin-regular.eot'); /* IE9 Compat Modes */
	src: local('NanumGothic'),
	     url('/fonts/nanum-gothic-v17-latin-regular.eot') format('embedded-opentype'), /* IE6-IE8 */
	     url('/fonts/nanum-gothic-v17-latin-regular.woff2') /* Super Modern Browsers */
	     url('/fonts/nanum-gothic-v17-latin-regular.woff') format('woff'), /* Modern Browsers */
	     url('/fonts/nanum-gothic-v17-latin-regular.ttf') format('truetype'), /* Safari, Android, iOS */
	     url('/fonts/nanum-gothic-v17-latin-regular.svg#NanumGothic') format('svg'); /* Legacy iOS */
}

/* 구글 머티리얼 아이콘 : 오프라인 */
@font-face {
	font-family: 'Material Icons';
	font-style: normal;
	font-weight: 400;
	src: url(../../css/google/iconfont/MaterialIcons-Regular.eot); /* For IE6-8 */
	src: local('Material Icons'),
	     local('MaterialIcons-Regular'),
	     url(../../css/google/iconfont/MaterialIcons-Regular.woff2) format('woff2'),
	     url(../../css/google/iconfont/MaterialIcons-Regular.woff) format('woff'),
	     url(../../css/google/iconfont/MaterialIcons-Regular.ttf) format('truetype');
}
 
.material-icons {
	font-family: 'Material Icons';
	font-weight: normal;
	font-style: normal;
	font-size: 24px;  /* Preferred icon size */
	display: inline-block;
	line-height: 1;
	text-transform: none;
	letter-spacing: normal;
	word-wrap: normal;
	white-space: nowrap;
	direction: ltr;
	
	/* Support for all WebKit browsers. */
	-webkit-font-smoothing: antialiased;
	/* Support for Safari and Chrome. */
	text-rendering: optimizeLegibility;
	
	/* Support for Firefox. */
	-moz-osx-font-smoothing: grayscale;
	
	/* Support for IE. */
	font-feature-settings: 'liga';
}

body {
	font-family: Nanum Gothic;
    margin: 0;
    font-size: 12px;
}

.h3, h3 {
	font-size: 15px !important;
	margin-top: 20px !important;
}

a {
    text-decoration: none;
}

*, :after {
	box-sizing: border-box;
}
.txt_input{
	margin: 4px;
}

/* 회원가입 폼 레이아웃 */
#join_wrap {
    width: 100%;
    max-width: 1482px;
    height: auto;
    position: relative;
    margin: 0 auto;
    padding: 70px 20px 70px;
    box-sizing: border-box;
}

/* //////////////////// 회원가입 테이블 방식 시작 ////////////////////////// */
/* 회원가입 입력란 및 혜택 레이아웃 */
#join_div {
	padding-bottom: 30px;
}

/* 혜택 레이아웃 */
#benefit_wrap{
    width: 745px;
    height: auto;
    text-align: center;
    margin: 0 auto 30px;
	background: #f1f1f1;
}

/* 혜택정보 간격 */
#benefit {
	padding-bottom: 10px;
}
#benefit table {
    width: 100%;
}

#benefit td {
	border: 0px !important;
}

#join_div table {
    border-spacing: 0;
    border-collapse: collapse;
}

#join_div tbody th {
    border: solid black;
    border-width: 1px 0;
    padding: 6px;
	text-align: left;
}

#join_div tbody td {
    border: solid black;
    border-width: 1px 0 1px 1px;
    padding: 6px;
}
/* //////////////////// 회원가입 테이블 방식 끝 ////////////////////////// */

/* 우편번호 버튼 */
.address {
	color: black;
	padding: 3px;
	border: 1px solid black;
}

/* 생년월일 버튼 */
#memberBirth {
/* padding-top: 5px; */	
}

/* 전체동의 박스 레이아웃 */
#agreement {
	border: 1px solid black;
	background: #f1f1f1;
	padding: 20px 10px;
	font-size: 10pt;
	margin: 13px 0;
}

/* 전체동의 체크박스 */
#all_checkbox {
	width: 21px;
    height: 21px;
    vertical-align: middle;
}

/* 약관 동의 내용 테이블 방식 */
.agreement_table {
	display: table-row-group;
	margin: 50px 0;
}

/* 약관 동의 내용 테이블 방식 */
.agreement_row {
	display: table-row;
}

/* 약관 동의 내용 테이블 방식 */
.agreement_cell{
	display: table-cell;
	width: 720px;
}

/* 약관동의 및 체크란 레이아웃 박스 */
.agreement_admit_box {
	border: 1px solid black;
	padding: 20px;
}

/* 약간 동의 체크박스 간격 조정 */
.agreement_admit_box p {
	margin: 0;
}

/* 약관 동의 내용 박스 */
.agreement_content_box{
	overflow: auto;
	border: 1px solid black;
	height: 22px;
	padding:20px;
	box-sizing: content-box;
}

/* SMS, 이메일, 평생회원 글씨 */
.sms_email_font {
	font-weight:bold;
	margin: 10px 0;
}

/* 필수 및 선택 체크란 크기 및 간격 조정 */
.checkbox {
	width: 13px; 
	height: 13px;
	vertical-align: middle;
	margin: 3px;
}

/* 회원가입 버튼 */
#joinSubmitBtn {
	width: 110px;
	height: 30px;
	border: 0;
	color: white;
	font-size: 12px;
	cursor: pointer;
	background: black;
}

#joinSubmitBtn:hover {
	background: #eeeeee;
	color: black;
}

#joinResetBtn {
	width: 110px;
	height: 30px;
	font-size: 12px;
	border: 0;
	cursor: pointer;
	background: #d9d9d9;
}

#joinResetBtn:hover {
	background: #eeeeee;
	color: black;
}

.err_msg {
	color: red;
}
