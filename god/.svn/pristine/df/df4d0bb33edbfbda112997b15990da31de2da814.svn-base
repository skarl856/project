@charset "UTF-8";

/* nanum-gothic-regular - latin */
@font-face {
  font-family: 'Nanum Gothic';
  font-style: normal;
  font-weight: 400;
  src: url('../fonts/nanum-gothic-v17-latin-regular.eot'); /* IE9 Compat Modes */
  src: local('NanumGothic'),
       url('/fonts/nanum-gothic-v17-latin-regular.eot') format('embedded-opentype'), /* IE6-IE8 */
       url('/fonts/nanum-gothic-v17-latin-regular.woff2') /* Super Modern Browsers */
       url('/fonts/nanum-gothic-v17-latin-regular.woff') format('woff'), /* Modern Browsers */
       url('/fonts/nanum-gothic-v17-latin-regular.ttf') format('truetype'), /* Safari, Android, iOS */
       url('/fonts/nanum-gothic-v17-latin-regular.svg#NanumGothic') format('svg'); /* Legacy iOS */
}

/* 구글 머티리얼 아이콘 : 오프라인 */
@font-face {
   font-family: 'Material Icons';
   font-style: normal;
   font-weight: 400;
   src: url(../../css/google/iconfont/MaterialIcons-Regular.eot); /* For IE6-8 */
   src: local('Material Icons'),
        local('MaterialIcons-Regular'),
        url(../../css/google/iconfont/MaterialIcons-Regular.woff2) format('woff2'),
        url(../../css/google/iconfont/MaterialIcons-Regular.woff) format('woff'),
        url(../../css/google/iconfont/MaterialIcons-Regular.ttf) format('truetype');
}
 
.material-icons {
  font-family: 'Material Icons';
  font-weight: normal;
  font-style: normal;
  font-size: 24px;  /* Preferred icon size */
  display: inline-block;
  line-height: 1;
  text-transform: none;
  letter-spacing: normal;
  word-wrap: normal;
  white-space: nowrap;
  direction: ltr;
 
  /* Support for all WebKit browsers. */
  -webkit-font-smoothing: antialiased;
  /* Support for Safari and Chrome. */
  text-rendering: optimizeLegibility;
 
  /* Support for Firefox. */
  -moz-osx-font-smoothing: grayscale;
 
  /* Support for IE. */
  font-feature-settings: 'liga';
}

boby {
	margin: 0;
	padding: 0;
	font-family: Nanum Gothic;
}

*, ::after, ::before {
	box-sizing: content-box;
}

ul {
	list-style: none;
}

a{
	text-decoration: none;
	color: black;
}

button {
	overflow: visible;
    padding: 0;
    margin: 0;
    border: 0;
    cursor: pointer;
}

/* 전체 레이아웃 */
#wrap {
	width: 100%;
	/* height: 100%; */
	position: relative;
	box-sizing: border-box;
}

#box_wrap {
	height: 100px;
	position: relative;
	text-align: center;
	padding: 50px 0;
}

#category {
	width: 1512px;
	position: relative;
	box-sizing: border-box;
	margin: 0 auto;
}

#category span {
	font-size: 25pt;
}

#category a {
	padding-right: 30px;
	color: gray;
}

/*//////////////////////////////////////////// best item 부분 시작 ////////////////////////////////////////////////////////*/
/* 메인 타이틀 상품들 전체 레이아웃 */
[id^=main_] {
	max-width: 1512px;
	margin: 0 auto 100px;
}

/* 상품 top title */
[id^=title_] {
	margin: 0 auto 50px;
	text-align: center;
}

/* 상품 top title*/
[id^=title_] span {
	position: relative;
	display: inline-block;
	zoom: 1;
	font-size: 16pt;
	letter-spacing: 2px;
	font-weight: 400;
	line-height: 28px;
}

/* 각 타이틀 상품정보들 전체 영역 */
[id$=_products] {
	display: table;
	width: 100%;
	padding-left: 0;
	margin: 0 auto;
	font-size: 0;
	text-align:left;
}

/* 각 타이틀 상품정보들 간격 및 영역 */
[id$=_products] > li {
	width: 25%;
	position: relative;
	display: inline-block;
	margin: 0 0 50px;
	vertical-align: top;
}

/* 각 상품 이미지 영역 */
[id^=product_] {
	position: relative;
	margin: 0 15px 15px;
	text-align: center;
}

/* 각 상품 이미지 포지션 */
.list_img {
	position: relative;
}

/* 각 상품 이미지 호버 처리*/
.list_img:hover {
	opacity: 0.8;
}

/* 각 상품 이미지 사이즈 조정 */
.list_img a img {
	width: 100%;
	box-sizing: border-box;
}

/* 확대보기 및 좋아요 버튼 포지션 및 영역 */
.icon {
	margin: 0;
	vertical-align: middle;
	padding: 0;
	width: 100%;
	border: 0;
	position: absolute;
    bottom: 0;
    left: 0;
    opacity: 0;
}

/* 확대보기 버튼 사이즈 */
.expand_button {
	float: left;
	margin: 0;
}

/* 확대보기 버튼 배경 및 변화 */
.expand_button > span {
	background: rgba(255, 255, 255, 0.5);
	width: 37px;
	height: auto;
	text-align: center;
	display: inline-block;
	float: left;
	transition: all 0.4s;
}

/* 확대보기 버튼 호버 처리 버튼 올릴경우 찐하게 처리 */
.expand_button > span:hover {
	background: rgba(255, 255, 255, 255);
}

.option{
	display: inline-block;
    float: left;
}

/* 확대보기 및 좋아요 버튼 */
.like_button {
	float: right;
    position: relative;
    background: rgba(255,255,255,0.5);
    width: 51px;
    height: auto;
    transition: all 0.4s;
}

/* 확대보기 및 좋아요 버튼  */
.like_button strong {
	position: absolute;
    top: 0;
    right: 9px;
    line-height: 34px;
}

/* 상품 정보들 */
.description_product {
	margin: 0 auto;
	padding: 0 15px;
	line-height: 18px;
	text-align: center;
	position: relative;

}

/* 상품명 영역 */
.name_description {
	display:block;
	font-weight: normal;
	padding-bottom: 0px;
	letter-spacing: 0px;
}

/* 상품명 */
.title_description {
	margin: 0 0 17px;
}

/* 상품 컬러 및 가격 세일 영역 */
.info_product {
	margin: 0;
	padding: 0;
}

/* 상품 컬러 및 가격 세일 간격 */
.info_product > li {
	text-align: center;
	padding: 2px 0;
	letter-spacing: 1px;
}

/* 상품 컬러 및 가격 세일 */
.info_product > li > strong {
	font-weight: normal;
	vertical-align: top;
}

/* 상품 컬러 색깔 사이즈 */
.color_product {
	max-width: 190px;
	overflow: hidden;
	display: inline-block;
	margin: 0;
	padding 4px 0;
}

/* 상품 컬러 색깔 처리 */
.chips {
	float: left;
	width: 8px;
	height: 8px;
	margin: 0 0 0 2px;
	border: 1px solid #dedede;
	border-radius: 100%;
	font-size: 0;
	line-height: 0;
}
/*//////////////////////////////////////////// best item 정리 부분 끝 ////////////////////////////////////////////////////////*/

/*//////////////////////////////////////////// 카테고리 상품 이미지 부분 시작 /////////////////////////////////////////////////////////*/
/* 상품카운터 및 순서별 정리 버튼 전체 영역 */
#prd {
	width: 1512px;
	margin: 0 auto 30px;
}

/* 상품카운터 및 순서별 정리 버튼 간격 조정 */
#prd_align {
	padding: 15px 25px 80px;
}

/* 상품 총 개수 */
#prd_count {
	float: left;
	font-size: 14px;
}

/* 순서별 정리 버튼 영역 */
#prd_box_button {
	float: right;
	font-size: 14px;
	margin: 12px 4px;
}

/* 순서별 정리 버튼 테두리 */
#prd_box_button li {
	width: 75px;
	height: 28px;
	line-height: 29px;
	display: inline-block;
	text-align: center;
	border: 1px solid black;
	margin: 0 0 0 5px;
	overflow: hidden;
}

/* 순서별 정리 폰트 컬러 */
#prd_box_button li a {
	color: black;
}

#pagination {
	text-align: center;
	margin: 30px 0;
}

#pagination a {
	padding-left: 10px;
}