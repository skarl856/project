@charset "UTF-8";

/* nanum-gothic-regular - latin */
@font-face {
  font-family: 'Nanum Gothic';
  font-style: normal;
  font-weight: 400;
  src: url('../fonts/nanum-gothic-v17-latin-regular.eot'); /* IE9 Compat Modes */
  src: local('NanumGothic'),
       url('/fonts/nanum-gothic-v17-latin-regular.eot') format('embedded-opentype'), /* IE6-IE8 */
       url('/fonts/nanum-gothic-v17-latin-regular.woff2') /* Super Modern Browsers */
       url('/fonts/nanum-gothic-v17-latin-regular.woff') format('woff'), /* Modern Browsers */
       url('/fonts/nanum-gothic-v17-latin-regular.ttf') format('truetype'), /* Safari, Android, iOS */
       url('/fonts/nanum-gothic-v17-latin-regular.svg#NanumGothic') format('svg'); /* Legacy iOS */
}

/* 구글 머티리얼 아이콘 : 오프라인 */
@font-face {
   font-family: 'Material Icons';
   font-style: normal;
   font-weight: 400;
   src: url(../../css/google/iconfont/MaterialIcons-Regular.eot); /* For IE6-8 */
   src: local('Material Icons'),
        local('MaterialIcons-Regular'),
        url(../../css/google/iconfont/MaterialIcons-Regular.woff2) format('woff2'),
        url(../../css/google/iconfont/MaterialIcons-Regular.woff) format('woff'),
        url(../../css/google/iconfont/MaterialIcons-Regular.ttf) format('truetype');
}
 
.material-icons {
  font-family: 'Material Icons';
  font-weight: normal;
  font-style: normal;
  font-size: 24px;  /* Preferred icon size */
  display: inline-block;
  line-height: 1;
  text-transform: none;
  letter-spacing: normal;
  word-wrap: normal;
  white-space: nowrap;
  direction: ltr;
 
  /* Support for all WebKit browsers. */
  -webkit-font-smoothing: antialiased;
  /* Support for Safari and Chrome. */
  text-rendering: optimizeLegibility;
 
  /* Support for Firefox. */
  -moz-osx-font-smoothing: grayscale;
 
  /* Support for IE. */
  font-feature-settings: 'liga';
}


#wrap {
	display: flex;
	z-index: 1;
	width: 1330px;
	margin: 20px auto 0 auto;
    font-family: Nanum Gothic;
}

/* a 태그 데코레이션 제거 */
a, a:hover {
    color: black;
    text-decoration: none;
}

/* 좌측메뉴 */
#left {
    float: left;
    width: 190px;
    height: 750px;
    margin: 10px 30px 10px 0;
    padding: 20px;
    border: 1px solid rgb(141,141,141);
    border-radius: 20px;
}

/* 죄측메뉴 서브 */
#sub_menu {
    font-size: 10pt;
}

/* 우측 본문 */
#container {
    float: left;
    width: 1120px;
    padding: 20px 0;
}

/* 현재창 title */
header {
	margin: 10px 0;
}

/* 이름/아이디 셀렉트 박스 */
#select_box {
	width: 110px;
	height: 30px;
	font-size: 10pt;
	text-align-last: center;
}

#sdate, #edate {
    width: 90px;
    border: 1px solid rgb(141,141,141);
    text-align: center;
}

.material-icons {
	margin: -2px 0 0 0;
    vertical-align: middle;
	/* padding-bottom: 3px; */
}

/* 검색 전체 : 상세검색 버튼까지 포함 */
#search_area {
	height:60px;
	border: 1px solid rgb(141,141,141);
/* 	background: orange; */ 
	display: flex;
	align-items: center;
	justify-content: center;
}

#search_order_op {
	font-size:10pt;
/*  	background: yellow; */
}


ul {
	list-style: none;
}

div#tabs {
	margin-top: 20px;
	padding: 20px; /* 전체 container와 내부 tabs 간격 조정 */
	background: none;
	border: 1px solid rgb(141,141,141);
	font-color: black;
	font-size:10pt;
}

/* 탭 메뉴 전체 영역 배경색 */
.ui-tabs-nav {
 	background: none; 
/* 	background: cyan; */
}

/* 탭 메뉴 전체 영역 하단 border  */
.ui-tabs .ui-tabs-nav {
	margin: 0;
    padding: .2em .2em 0;
    border-bottom: 1px solid rgb(141,141,141);
}

/* 탭-내용 본문 */
.ui-tabs .ui-tabs-panel {
	border: solid rgb(141,141,141);
    border-width: 0 1px 1px;
}

/* nav 겉 header border 제거 */
.ui-widget-header {
	border: none;
}

/* nav메뉴와 본문 좌측 선 정렬 */
.tabs_position{
	margin-left: 2.5px;
}

/* nav메뉴 hover 상태일때 */
.ui-state-hover,
.ui-widget-content .ui-state-hover,
.ui-widget-header .ui-state-hover,
.ui-state-focus,
.ui-widget-content .ui-state-focus,
.ui-widget-header .ui-state-focus,
.ui-button:hover,
.ui-button:focus {
	background: #D9D9D9;
	border: 1px solid rgb(141,141,141);
}


/* 해당 메뉴 선택시 메뉴 상태 */
.ui-state-active,
.ui-widget-content .ui-state-active,
.ui-widget-header .ui-state-active,
a.ui-button:active,
.ui-button:active,
.ui-button.ui-state-active:hover {
	background: #BFBFBF;
	border: 1px solid rgb(141,141,141);
}

/* nav 버튼 내 font 조절 */
.ui-state-default a,
.ui-state-default a:link,
.ui-state-default a:visited,
a.ui-button,
a:link.ui-button,
a:visited.ui-button,
.ui-button {
 	color: black;
 	font-size: 14px;
}

/* 주문확인전 리스트 */
.order_checkbefore_list {
	width: 100%;
	min-width: 730px;
	margin: 5px 0 20px 0;
	border-top: 1px solid rgb(141,141,141);
	font-size: 10pt;
	text-align: center;
}

/* 주문확인전 첫줄 */
.list1 {
	height: 30px;
	padding: 10px;
	border-bottom: 1px solid rgb(141,141,141);
	background-color: rgb(203,203,203);
}

/* 주문확인전 라인 */
.list2 {
	height: 30px;
	padding: 10px;
	border-bottom: 1px solid rgb(141,141,141);
}

/* 버튼 area */
#list_btn_area {
	width: 100%;
	padding-top:20px;
	font-size:10pt;
/*  background: cyan; */
}

#list_btn_area_left {
	float: left;
	width: 50%;
 	height: 40px;
/*  	background: orange; */ 	
}

/* 리스트 다운로드 버튼 */
#list_btn_area_right {
	float: left;
	width: 50%;
	height: 40px;
/* 	background: yellow; */ 
	text-align: right;
}

/* 페이지 네비게이션 */
.pagination {
	margin: 0 auto;
 	text-align: center;
	font-size: 10pt;
}

.pagination li {
	margin: 0 10px;
}